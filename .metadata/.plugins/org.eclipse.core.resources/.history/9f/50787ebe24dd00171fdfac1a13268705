class Layer{
	
	protected int[] inputs;
	protected int[] activations;
	protected int[] error;
	protected int[] biases;
	protected int[][] weights;
	
	public Layer(){
		
	}
	
	public void setInputArray(int[] inputs){
		this.inputs  = inputs;
	}
	
	public int[] getActivations(){
		return activations;
	}
	
}

class fullyConnectedLayer extends Layer{
	
	public fullyConnectedLayer(int numNodes){
		activations = new int[numNodes];
	}
	
}

